<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="ActivityTheme.NoActionBar" />

    <style name="ActivityTheme.StepDetails" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="LabelTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ServingsLabelTheme" parent="LabelTheme">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="IngredientsTheme" parent="LabelTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="StepItemTheme" parent="LabelTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="StepProgressLabelTheme" parent="LabelTheme">
        <item name="android:gravity">end|right</item>
    </style>

    <style name="StepDescriptionTheme" parent="LabelTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>